/* pages/collect/index.wxss */
.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_tips {
  padding: 15rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_main .collect_content .goods_list .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
}
.collect_main .collect_content .goods_list .goods_item .item_img {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}
.collect_main .collect_content .goods_list .goods_item .item_img image {
  width: 70%;
}
.collect_main .collect_content .goods_list .goods_item .item_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .goods_list .goods_item .item_content .item_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main .collect_content .goods_list .goods_item .item_content .item_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
