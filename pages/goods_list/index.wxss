.goods_list .first_tabs .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.goods_list .first_tabs .goods_item .item_img {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.goods_list .first_tabs .goods_item .item_img image {
  width: 70%;
}
.goods_list .first_tabs .goods_item .item_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list .first_tabs .goods_item .item_content .item_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list .first_tabs .goods_item .item_content .item_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
